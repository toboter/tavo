<%= nested_form_for @project, :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.error_messages %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>


  <%= f.fields_for :memberships do |builder| %>
    <%= render "membership_fields", :f => builder %>
  <% end %>
  <div class="control-group">
    <p style="padding-bottom:20px;"><%= f.link_to_add "Einen Mitarbeiter hinzufÃ¼gen", :memberships %></p>
  </div>

  <div class="control-group">
    <%= f.label :description, "Projektbeschreibung", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :method, "Vorgehensweise", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :method, :class => 'text_field span5' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <% if @project.new_record? %>
      <%= link_to 'Abbrechen', projects_path, :class => 'btn' %>
    <% else %>
      <%= link_to 'Abbrechen', @project, :class => 'btn' %>
    <% end %>
  </div>
<% end %>