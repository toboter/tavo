<% content_for :content do %>
  <div class="row" style="margin-bottom:40px;">
  	<div class="span7">
  	  <%= yield(:overview) %>
  	</div>
    <% if logged_in? %>
  	  <div class="span5">
  	    <%= yield(:links) %>
  	  </div>
    <% end %>
  </div>
  <div class="row">
  	<div class="span7">
  	  <%= yield(:text) %>
  	</div>
  	<div class="span5">
  	  <%= yield(:media) %>
  	</div>
  </div>
<% end %>

<%= render :template => 'layouts/application' %>